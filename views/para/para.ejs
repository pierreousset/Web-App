<div style="margin-top: 1cm;"></div>
<style>
    .demo-list-control {
        width: 10cm;
    }
    
    .demo-list-radio {
        display: inline;
    }
    
    .demo-card-square.mdl-card {
        width: 320px;
        height: 320px;
    }
    
    .demo-card-square>.mdl-card__title {
        color: #fff;
