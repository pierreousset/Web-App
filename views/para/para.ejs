                <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
      Mode Premium
    </a>
            </div>
        </div>
    </div>

    <div class="mdl-cell mdl-cell--4-col">
        <ul class="demo-list-control mdl-list" style="background-color: white;">

            <li class="mdl-list__item">
                <span class="mdl-list__item-primary-content">
                    <i class="material-icons  mdl-list__item-avatar">color_lens</i>
                    Fonds random
                </span>
                <span class="mdl-list__item-secondary-action">
                    <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" for="list-checkbox-1">
                        <input type="checkbox" id="list-checkbox-1" class="mdl-checkbox__input" checked />
                    </label>
                </span>
            </li>

            <li class="mdl-list__item">
                <button class="mdl-button couleur">
                    <span class="mdl-list__item-primary-content couleur">
                        <i class="material-icons  mdl-list__item-avatar">colorize</i>
                        Couleurs fonds
                    </span>
                </button>
            </li>

            <li class="mdl-list__item">
                <span class="mdl-list__item-primary-content">
                    <i class="material-icons  mdl-list__item-avatar">brightness_6</i>
                    Mode nuit
                </span>
                <span class="mdl-list__item-secondary-action">
                    <label class="mdl-switch mdl-js-switch mdl-js-ripple-effect" for="list-switch-1">
                        <input type="checkbox" id="list-switch-1" class="mdl-switch__input" checked />
                    </label>
                </span>
            </li>
        </ul>
    </div>

    <div class="mdl-cell mdl-cell--4-col"></div>

    <dialog class="mdl-dialog mdl_3 changecouleur">
        <button class="mdl-button mdl-js-button mdl-button--fab mdl-button--mini-fab buttonnn closess">
